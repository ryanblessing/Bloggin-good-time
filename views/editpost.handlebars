<article>
    <a href="/dashboard"> &larr; Dashboard </a>
    <h2>
        Edit
    </h2>
    <form class="edit-post">
        <div>
            <input name="post-title" type="text" value="{{post_title}}"/>
            <input name="post-content" type="text" value="{{post_content}}"/>
        </div>
        <div>
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit">Save</button>
        <button type="button" class="deleteBtn">Delete</button>
    </form>
</article>

<form class="commentForm">
    <div>
        <textarea name="commentBody"></textarea>
    </div>
    <div>
        <button type="submit">Comment</button>
    </div>
</form>
{{> comments post.comments}}

<script src="/javascript/post.js"