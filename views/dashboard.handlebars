<!---->
<section>
    <h2>Create a new Post!</h2>
    <form class="newPost">
        <div>
            <label for="post-title">Insert title:</label>
            <input type="text" id="post-title" name="post-title"/>
        </div>
        <div>
            <label for="content">Insert Content:</label>
            <input id="content" name="content"/>
        </div>
        <div>
            <button type="submit" class="btn">Add</button>
        </div>
    </form>
</section>

{{#if post.length}}
<section>
    <h2>Post</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit your Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/post.js"></script>